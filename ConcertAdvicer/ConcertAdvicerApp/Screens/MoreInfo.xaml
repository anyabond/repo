<Window x:Class="ConcertAdvicerApp.Screens.MoreInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcertAdvicerApp.Screens"
        mc:Ignorable="d"
        Title="Info" SizeToContent="Height" Width="300">
    <Grid>
        <StackPanel>
            <Label>Title</Label>
            <TextBox x:Name="TitleTextBox" IsReadOnly="True" TextWrapping="Wrap"></TextBox>
            <Label>Date</Label>
            <TextBox x:Name="DateTextBox" IsReadOnly="True"></TextBox>
            <Label>Price</Label>
            <TextBox x:Name="PriceTextBox" IsReadOnly="True"></TextBox>
            <Label>Description</Label>
            <TextBox x:Name="DescriptionTextBox" IsReadOnly="True" TextWrapping="Wrap"></TextBox>
            <TextBox x:Name="URTextBox" IsReadOnly="True"></TextBox>
            <Button Margin="5,5,5,0" Background="White" Click="CopyURL_OnClick">Copy URL</Button>
            <Button Margin="5,5,5,0" Background="White" Click="Close_OnClick">Close</Button>
            <Label x:Name="infoLabel" HorizontalContentAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
